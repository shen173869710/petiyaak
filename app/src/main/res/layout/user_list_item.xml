<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/main_cancle_bg"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/uesr_item_name"
        android:textSize="@dimen/size_14"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/user_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/user_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/size_14"
                android:text="Left"
                ></TextView>
            <View
                android:id="@+id/user_left_icon"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/blue"
                ></View>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/user_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/size_14"
                android:text="Right"
                ></TextView>
            <View
                android:id="@+id/user_right_icon"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/blue"
                ></View>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/user_finger_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/finger_n"
                ></ImageView>

            <TextView
                android:id="@+id/user_finger_1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_30"
                android:textSize="@dimen/size_14"
                android:text="Thumb"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/user_finger_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/finger_n"
                ></ImageView>

            <TextView
                android:id="@+id/user_finger_2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_30"
                android:textSize="@dimen/size_14"
                android:text="Index"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/user_finger_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/finger_n"
                ></ImageView>

            <TextView
                android:id="@+id/user_finger_3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_30"
                android:textSize="@dimen/size_14"
                android:text="Middle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/user_finger_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/finger_n"
                ></ImageView>

            <TextView
                android:id="@+id/user_finger_4_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_30"
                android:textSize="@dimen/size_14"
                android:text="Ring"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/user_finger_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/finger_n"
                ></ImageView>

            <TextView
                android:id="@+id/user_finger_5_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_30"
                android:textSize="@dimen/size_14"
                android:text="Ring"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>