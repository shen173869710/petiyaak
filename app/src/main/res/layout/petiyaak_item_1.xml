<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="130dp"
    android:background="@drawable/petiyaak_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/ic_default"></ImageView>

    <TextView
        android:id="@+id/petiyaak_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"></TextView>

    <RelativeLayout
        android:id="@+id/petiyaak_blue_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:id="@+id/petiyaak_blue_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/petiyaak_blue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/petiyaak_blue_status"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"></TextView>
    </RelativeLayout>
</LinearLayout>