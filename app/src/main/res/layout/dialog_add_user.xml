<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/success_layout"
        android:layout_width="300dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/main_dialog_bg">
        <TextView
            android:id="@+id/user_title"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_16"
            android:textColor="@color/blue"
            android:text="Add User"
            />
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="text"
            android:maxLength="32"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColorHint="@color/black_30"
            android:textColor="@color/black"
            android:textSize="@dimen/size_24"
            android:hint="Enter Username"
            />

        <TextView
            android:id="@+id/user_save"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_cancle_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_18"
            android:layout_marginTop="30dp"
            android:text="save"
            />
        <TextView
            android:id="@+id/user_cancle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_read_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18"
            android:layout_marginTop="30dp"
            android:text="cancle"
            />
    </LinearLayout>
</LinearLayout>